// set all local variables to ''
$luserid = $lusername
    = $lpassword
    = $lfirstname
    = $lmiddle
    = $llastname
    = $lbirthday
    = $lemail = '';
$lage = 0;
//$lisadmin = 0;
//$lisregistereduser = 0;
$lbirthday = NULL;

// set errors to NUL
$errors = array(
    'username' => '',
    'password' =>  '',
    'firstname'  =>  '',
    'middle'  =>  '',
    'lastname'  =>  '',
    'birthday'  =>  '',
    'email'  =>  '',
    'age'  =>  ''
);


echo "before isset _Post check<br>";

if (isset($_POST['submit'])) {
    // data has been entered and submitted
    // process input form
    // this could be insert OR update 

    //check username:

    if (empty($_POST['username'])) {
        $errors['username'] = 'username is required';
    } else {
        $lusername = filter_input(INPUT_POST, 'username');
        if ($lusername) {
            if (!preg_match('/^([a-zA-Z\s]+)(\$*\.*_*-*\s*[a-zA-Z\s]*)*$/', $lusername)) {
                $errors['username'] = "invalid username. (letters, ' ',   '$'.   '_',   '-',   '.'} are allowed";
            }
        }
    }

    $errors['password'] = "Error, checking of email has been bypassed. (letters, ' ',   '$'.   '_',   '-',   '.'} are allowed";

    //check firstname:
    if (empty($_POST['firstname'])) {
        $errors['firstname'] = 'firstname is required';
        var_dump($errors);
    } else {
        $lfirstname = filter_input(INPUT_POST, 'firstname');
        if ($lfirstname) {
            if (!preg_match('/^([a-zA-Z\s]+)(\$*\.*_*-*\s*[a-zA-Z\s]*)*$/', $lfirstname)) {
                $errors['username'] = "invalid username. (letters, ' ',   '$'.   '_',   '-',   '.'} are allowed";
            }
        }
    }

    //check middle:
    if (!empty($_POST['middle'])) {
        $lmiddle = filter_input(INPUT_POST, 'middle');
        if ($lmiddle) {
            if (!preg_match('/^[a-zA-Z\s]+$/', $lmiddle)) {
                $errors['username'] = "invalid middle initial. Only a letter or blank is allowed";
            }
        }
    }



    //check lastname:
    if (empty($_POST['lastname'])) {
        $errors['lastname'] = 'lastname is required';
        var_dump($errors);
    } else {
        $llastname = filter_input(INPUT_POST, 'lastname');
        if ($llastname) {
            echo "before preg_match<br>";
            if (!preg_match('/^([a-zA-Z\s]+)(\$*\.*_*-*\s*[a-zA-Z\s]*)*$/', $llastname)) {
                $errors['lastname'] = "invalid username. (letters, ' ',   '$'.   '_',   '-',   '.'} are allowed";
            }
        }
    }



    // check email
    if (empty($_POST['email'])) {
        $errors['email'] = 'An email is required';
    } else {
        $lemail = $_POST['email'];
        if (!filter_var($lemail, FILTER_VALIDATE_EMAIL)) {
            $errors['email'] = 'Email must be a valid email address';
        }
    }



    // check age
    if (empty($_POST['age'])) {
        $errors['age'] = 'An age is required';
    } else {
        $lage = $_POST['age'];
        if (!filter_var($lage, FILTER_VALIDATE_INT)) {
            $errors['age'] = 'age must be an integer';
        }
    }




    echo "before array_filter";
    if (array_filter($errors)) {
        echo "errors";
        var_dump($errors);
    } else {
        echo "no errors found";
    }
} else {
    echo "isset post is false";
}

